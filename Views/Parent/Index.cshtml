@model AutismEducationPlatform.Web.Models.ViewModels.ParentProfileViewModel

@{
    ViewData["Title"] = "Veli Paneli";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}

@Html.AntiForgeryToken()

<div class="container-fluid">
    <div class="row">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-brain"></i>
                    <span>Otizm Eğitim Platformu</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Parent")">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Education", "Parent")">
                                <i class="fas fa-book"></i> Eğitimler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Children", "Parent")">
                                <i class="fas fa-child"></i> Çocuk Bilgisi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Progress", "Parent")">
                                <i class="fas fa-chart-line"></i> İlerleme Raporu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AddChild", "Parent")">
                                <i class="fas fa-plus-circle"></i> Çocuk Ekle
                            </a>
                        </li>
                    </ul>
                    <div class="user-info">
                        <a href="@Url.Action("Profile", "Parent")" class="btn btn-outline-primary">
                            <img src="~/images/profil.jpg" class="rounded-circle me-2" width="30" height="30" alt="Profil">
                            @Model.FirstName @Model.LastName
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger" onclick="return confirm('Çıkış yapmak istediğinize emin misiniz?');">
                            <i class="fas fa-sign-out-alt"></i> Çıkış
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Ana İçerik -->
        <div class="container mt-4">
            <!-- Hoşgeldiniz Kartı -->
            <div class="hero-section mb-5">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="display-4 fw-bold mb-3">Hoş Geldiniz, @Model.FirstName @Model.LastName!</h1>
                            <p class="lead mb-4">Çocuğunuzun eğitim yolculuğunda size yardımcı olmaktan mutluluk duyuyoruz.</p>
                            <div class="hero-btns">
                                <a href="@Url.Action("Education", "Parent")" class="btn btn-primary">
                                    <i class="fas fa-graduation-cap me-2"></i>Eğitimlere Başla
                                </a>
                                <a href="@Url.Action("Progress", "Parent")" class="btn btn-outline-light">
                                    <i class="fas fa-chart-line me-2"></i>İlerlemeyi Gör
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <img src="~/images/profil.jpg" alt="Profil" class="rounded-circle shadow-lg" width="200" height="200" style="object-fit: cover;">
                        </div>
                    </div>
                </div>
                <div class="hero-shapes">
                    <div class="shape"></div>
                    <div class="shape"></div>
                    <div class="shape"></div>
                </div>
            </div>

            <!-- Ana Menü Kartları -->
            <div class="row g-4">
                <!-- Aktif Eğitimler -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-primary text-white mb-3">
                                <i class="fas fa-graduation-cap fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Aktif Eğitimler</h3>
                            <p class="text-muted mb-4">Çocuğunuzun devam eden eğitimlerini görüntüleyin ve takip edin.</p>
                            <a href="@Url.Action("Index", "Course")" class="btn btn-primary w-100">
                                <i class="fas fa-play me-2"></i>Eğitime Başla
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Rehberlik -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-success text-white mb-3">
                                <i class="fas fa-book fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Önerilen Etkinlikler ve Tavsiyeler</h3>
                            <p class="text-muted mb-4">Uzmanlarımızdan öneriler ve rehberlik hizmetleri.</p>
                            <a href="@Url.Action("Guidance", "Parent")" class="btn btn-success w-100">
                                <i class="fas fa-arrow-right me-2"></i>Rehberliğe Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Haberler -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-info text-white mb-3">
                                <i class="fas fa-newspaper fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Haberler</h3>
                            <p class="text-muted mb-4">Güncel gelişmeler ve önemli duyurular.</p>
                            <a href="@Url.Action("News", "Parent")" class="btn btn-info w-100">
                                <i class="fas fa-arrow-right me-2"></i>Haberleri Gör
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Kaynaklar -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-warning text-white mb-3">
                                <i class="fas fa-lightbulb fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Dosya ve Materyal Paylaşımı</h3>
                            <p class="text-muted mb-4">Faydalı materyaller ve eğitim kaynakları.</p>
                            <a href="@Url.Action("Resources", "Parent")" class="btn btn-warning w-100">
                                <i class="fas fa-arrow-right me-2"></i>Kaynaklara Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- İlerleme Raporu -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-danger text-white mb-3">
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Eğitim İlerleme Raporu</h3>
                            <p class="text-muted mb-4">Çocuğunuzun gelişimini takip edin.</p>
                            <a href="@Url.Action("Progress", "Parent")" class="btn btn-danger w-100">
                                <i class="fas fa-arrow-right me-2"></i>Raporu Gör
                            </a>
                        </div>
                    </div>
                </div>

                <!-- İletişim -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-secondary text-white mb-3">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">İletişim</h3>
                            <p class="text-muted mb-4">Bizimle iletişime geçin.</p>
                            <a href="@Url.Action("Contact", "Parent")" class="btn btn-secondary w-100">
                                <i class="fas fa-arrow-right me-2"></i>İletişime Geç
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('a[href="@Url.Action("Logout", "Account")"]').addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = '@Url.Action("Logout", "Account")';
        });
    </script>
}