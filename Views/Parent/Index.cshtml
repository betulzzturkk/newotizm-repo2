@using AutismEducationPlatform.Web.Models.ViewModels
@model ParentProfileViewModel

@{
    ViewData["Title"] = "Veli Paneli - Ana Sayfa";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}

@if (TempData["ProfileSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="max-width:600px;margin:20px auto 0 auto;">
        @TempData["ProfileSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<div class="parent-dashboard">
    <div class="profile-image-container" style="text-align:center; margin-bottom: -30px;">
        <img src="/images/profiles/profil.jpg" alt="Profil Resmi" class="profile-img" style="width:110px; height:110px; border-radius:50%; object-fit:cover; box-shadow:0 2px 8px rgba(0,0,0,0.12); border:4px solid #fff; background:#eee;" />
    </div>
    <!-- Üst Banner -->
    <div class="welcome-banner">
        <h1>Hoş Geldiniz, @Model.FirstName @Model.LastName!</h1>
        <p>Çocuğunuzun eğitim yolculuğuna devam etmek için eğitimlere göz atın.</p>
    </div>

    <!-- Ana Menü Kartları -->
    <div class="menu-cards">
        <!-- Eğitimler Kartı -->
        <div class="menu-card education-card">
            <a href="/Parent/Educations">
                <div class="card-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="card-content">
                    <h2>Eğitimlere Git</h2>
                    <p>Çocuğunuzun eğitim yolculuğuna devam edin</p>
                </div>
            </a>
        </div>

        <!-- Çocuk Bilgileri Kartı -->
        <div class="menu-card child-info-card">
            <a href="/Parent/ChildInfo">
                <div class="card-icon">
                    <i class="fas fa-baby"></i>
                </div>
                <div class="card-content">
                    <h2>Çocuk Bilgileri</h2>
                    <p>Ad, yaş, gelişim durumu</p>
                </div>
            </a>
        </div>

        <!-- Gelişim Raporu Kartı -->
        <div class="menu-card progress-card">
            <a href="/Parent/Progress">
                <div class="card-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="card-content">
                    <h2>Gelişim Raporu</h2>
                    <p>Çocuk için özet rapor</p>
                </div>
            </a>
        </div>

        <!-- Mesajlar Kartı -->
        <div class="menu-card messages-card">
            <a href="/Parent/Messages">
                <div class="card-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="card-content">
                    <h2>Mesajlar</h2>
                    <p>Eğitmen-veli iletişimi</p>
                </div>
            </a>
        </div>

        <!-- Takvim Kartı -->
        <div class="menu-card calendar-card">
            <a href="/Parent/Calendar">
                <div class="card-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="card-content">
                    <h2>Takvim</h2>
                    <p>Eğitim günleri ve öneriler</p>
                </div>
            </a>
        </div>

        <!-- Rehberlik Kartı -->
        <div class="menu-card guidance-card">
            <a href="/Parent/Guidance">
                <div class="card-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="card-content">
                    <h2>Rehberlik</h2>
                    <p>Veli bilgilendirme yazıları</p>
                </div>
            </a>
        </div>

        <!-- Evde Öneriler Kartı -->
        <div class="menu-card home-tips-card">
            <a href="/Parent/HomeTips">
                <div class="card-icon">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <div class="card-content">
                    <h2>Evde Öneriler</h2>
                    <p>Günlük küçük etkinlik fikirleri</p>
                </div>
            </a>
        </div>

        <!-- Ayarlar Kartı -->
        <div class="menu-card settings-card">
            <a href="/Parent/Settings">
                <div class="card-icon">
                    <i class="fas fa-cog"></i>
                </div>
                <div class="card-content">
                    <h2>Ayarlar</h2>
                    <p>Profil bilgileri, parola değişimi</p>
                </div>
            </a>
        </div>
    </div>
</div> 