@model List<AutismEducationPlatform.Web.Models.Course>
@{
    ViewData["Title"] = "Eğitimler";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}
<link rel="stylesheet" href="/css/child-info.css" />
<div class="container py-4">
    <h2 class="mb-4" style="font-weight:700; color:#2193b0; letter-spacing:1px;">Eğitimler</h2>
    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100" style="border-radius:20px; overflow:hidden; background:@(string.IsNullOrWhiteSpace(course.BackgroundColor) ? "#f8fafc" : course.BackgroundColor);">
                    <img src="@course.ImageUrl" alt="@course.Name" style="width:100%; height:180px; object-fit:cover; border-top-left-radius:20px; border-top-right-radius:20px;" />
                    <div class="card-body">
                        <h5 class="card-title mb-2" style="font-weight:700; color:#2193b0;">@course.Name</h5>
                        <div class="mb-2 text-muted" style="font-size:1rem;">@course.Category</div>
                        <p class="card-text" style="min-height:60px;">@course.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-primary">Seviye: @course.DifficultyLevel</span>
                            <span class="badge bg-info text-dark">Süre: @course.DurationMinutes dk</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 