@{
    ViewData["Title"] = "Aktiviteler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-3">
                <i class="fas fa-tasks text-primary me-2"></i>
                Aktiviteler
            </h2>
            <p class="text-muted">Çocuğunuz için önerilen ve devam eden aktiviteleri buradan takip edebilirsiniz.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Sosyal Beceriler</h5>
                        <span class="badge bg-success">Devam Ediyor</span>
                    </div>
                    <p class="card-text">Grup içi iletişim ve etkileşim aktiviteleri.</p>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                    </div>
                    <button class="btn btn-primary btn-sm">Detayları Gör</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Dil Gelişimi</h5>
                        <span class="badge bg-warning">Yeni Başladı</span>
                    </div>
                    <p class="card-text">Kelime hazinesini geliştirme ve konuşma pratikleri.</p>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                    </div>
                    <button class="btn btn-primary btn-sm">Detayları Gör</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Motor Beceriler</h5>
                        <span class="badge bg-info">Önerilen</span>
                    </div>
                    <p class="card-text">İnce ve kaba motor becerilerini geliştirme aktiviteleri.</p>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                    </div>
                    <button class="btn btn-primary btn-sm">Başla</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Aktivite Geçmişi</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Aktivite</th>
                                    <th>Başlangıç</th>
                                    <th>Bitiş</th>
                                    <th>Durum</th>
                                    <th>İlerleme</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Sosyal Beceriler</td>
                                    <td>01.04.2024</td>
                                    <td>Devam Ediyor</td>
                                    <td><span class="badge bg-success">Aktif</span></td>
                                    <td>
                                        <div class="progress" style="height: 5px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Detay</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Dil Gelişimi</td>
                                    <td>15.04.2024</td>
                                    <td>Devam Ediyor</td>
                                    <td><span class="badge bg-warning">Yeni</span></td>
                                    <td>
                                        <div class="progress" style="height: 5px;">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 25%"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Detay</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 