@{
    ViewData["Title"] = "İlerleme Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-3">
                <i class="fas fa-chart-line text-success me-2"></i>
                İlerleme Raporu
            </h2>
            <p class="text-muted">Çocuğunuzun gelişim sürecini ve başarılarını takip edin.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Genel İlerleme</h5>
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <h6 class="mb-2">Sosyal Beceriler</h6>
                            <div class="progress" style="height: 8px; width: 200px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                            </div>
                        </div>
                        <span class="h4 mb-0 text-success">75%</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <h6 class="mb-2">Dil Gelişimi</h6>
                            <div class="progress" style="height: 8px; width: 200px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 45%"></div>
                            </div>
                        </div>
                        <span class="h4 mb-0 text-warning">45%</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <h6 class="mb-2">Motor Beceriler</h6>
                            <div class="progress" style="height: 8px; width: 200px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 60%"></div>
                            </div>
                        </div>
                        <span class="h4 mb-0 text-info">60%</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Son Başarılar</h5>
                    <div class="list-group list-group-flush mt-3">
                        <div class="list-group-item border-0">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-success rounded-circle p-2 me-3">
                                    <i class="fas fa-check"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Grup Aktivitesini Tamamladı</h6>
                                    <small class="text-muted">2 gün önce</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-primary rounded-circle p-2 me-3">
                                    <i class="fas fa-star"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Yeni Kelime Öğrendi</h6>
                                    <small class="text-muted">4 gün önce</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-info rounded-circle p-2 me-3">
                                    <i class="fas fa-trophy"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Motor Beceri Seviyesi Atladı</h6>
                                    <small class="text-muted">1 hafta önce</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Detaylı Rapor</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Aktivite</th>
                                    <th>Kategori</th>
                                    <th>Başarı</th>
                                    <th>Notlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>15.04.2024</td>
                                    <td>Grup İçi İletişim</td>
                                    <td>Sosyal Beceriler</td>
                                    <td>
                                        <div class="progress" style="height: 5px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 80%"></div>
                                        </div>
                                    </td>
                                    <td>Grup aktivitelerine aktif katılım gösterdi</td>
                                </tr>
                                <tr>
                                    <td>14.04.2024</td>
                                    <td>Kelime Oyunları</td>
                                    <td>Dil Gelişimi</td>
                                    <td>
                                        <div class="progress" style="height: 5px;">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 65%"></div>
                                        </div>
                                    </td>
                                    <td>Yeni kelimeleri öğrenmede istekli</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 