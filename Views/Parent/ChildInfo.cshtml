@model List<AutismEducationPlatform.Web.Models.ViewModels.ChildViewModel>
@{
    ViewData["Title"] = "Çocuk Bilgileri";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}
<div class="container py-4">
    @if (TempData["ChildSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="max-width:600px;margin:20px auto 0 auto;">
            @TempData["ChildSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }
    <h2 class="mb-4">Çocuk Bilgileri</h2>
    @if (Model != null && Model.Count > 0)
    {
        <div class="row g-4">
            @foreach (var child in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-2">@child.Name (@child.Age) yaşında</h5>
                            <div class="mb-2">
                                <strong>İlgi Alanları:</strong>
                                @if (!string.IsNullOrWhiteSpace(child.Interests))
                                {
                                    var tags = child.Interests.Split(',');
                                    foreach (var tag in tags)
                                    {
                                        <span class="badge bg-primary me-1">@tag.Trim()</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmemiş</span>
                                }
                            </div>
                            <div class="mb-2"><strong>Tanı:</strong> @(string.IsNullOrWhiteSpace(child.Diagnosis) ? "Belirtilmemiş" : child.Diagnosis)</div>
                            <div class="mb-2"><strong>Özel Gereksinimler:</strong> @(string.IsNullOrWhiteSpace(child.SpecialNeeds) ? "Belirtilmemiş" : child.SpecialNeeds)</div>
                            <div class="mb-2"><strong>Eklenme Tarihi:</strong> @child.CreatedAt.ToShortDateString()</div>
                            <div class="mb-2"><strong>Notlar:</strong> <span class="text-muted">@(string.IsNullOrWhiteSpace(child.Notes) ? "Henüz not eklenmemiş" : child.Notes)</span></div>
                            <div class="d-flex gap-2 mt-3">
                                <a href="/Parent/EditChild/@child.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                <form asp-action="DeleteChild" asp-route-id="@child.Id" method="post" onsubmit="return confirm('Çocuğu silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Henüz çocuk bilgisi eklenmemiş.</div>
    }
</div> 