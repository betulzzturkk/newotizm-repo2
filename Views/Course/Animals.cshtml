            <!-- Fil -->
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="900">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #17A2B8 0%, #FFB347 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/elephant.jpg" alt="Fil" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Fil</h4>
                    <p>Filler büyük ve güçlüdür.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSoundAndProgress('/sounds/animals/fil.mp3', 'Fil')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                    <div class="progress my-3" style="height: 20px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" id="progress-fil" role="progressbar" style="width: 0%">0%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function playSoundAndProgress(soundPath, animalName) {
            var audio = new Audio(soundPath);
            audio.play();
            var progressBar = document.getElementById('progress-' + animalName.toLowerCase());
            var currentProgress = parseInt(progressBar.style.width) || 0;
            // 5 tıklamada %100: her tıklamada +20
            var newProgress = currentProgress + 20;
            if (newProgress > 100) newProgress = 100;
            progressBar.style.width = newProgress + '%';
            progressBar.textContent = newProgress + '%';
            progressBar.setAttribute('aria-valuenow', newProgress);
            // AJAX ile ilerleme bilgisini kaydet
            fetch('/Course/SaveProgress', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ animal: animalName, progress: newProgress })
            })
            .then(response => response.json())
            .then(data => console.log('Success:', data))
            .catch((error) => console.error('Error:', error));
        }
    </script>
} 