@model List<AutismEducationPlatform.Web.Models.ViewModels.AnimalViewModel>

@{
    ViewData["Title"] = "Hayvanlar";
}

<!-- Animasyonlu arka plan için harici CSS -->
<link rel="stylesheet" href="/css/animals-bg.css" />

<div class="body-animals-bg" style="background-image: url('/images/animals/animal-bg-pattern.png'), linear-gradient(135deg, #FFB347 0%, #6B48FF 50%, #FF6B6B 100%); background-size: 300px, cover; background-repeat: repeat;">
    <!-- Animasyonlu bulutlar -->
    <div class="cloud"></div>
    <div class="cloud cloud2"></div>
    <div class="cloud cloud3"></div>
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-10">
                <div class="alert alert-info text-center mb-4" style="font-size:1.2rem;">
                    <i class="fas fa-info-circle me-2"></i>
                    İlerlemenizin kaydedilmesi için <a href="/Account/Login" class="alert-link">giriş yapın</a> veya <a href="/Account/Register" class="alert-link">kaydolun</a>.
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="mb-3" style="font-size:2.5rem; font-weight:800; color:#6B48FF;" data-aos="fade-up">
                    <i class="fas fa-paw me-2"></i> Hayvanlar
                </h2>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">
                    Hayvanları tanı, seslerini dinle ve ilerlemeni takip et!
                </p>
            </div>
        </div>
        <div class="row g-4">
            <!-- Kedi -->
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #FFB347 0%, #FF6B6B 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/cat.jpg" alt="Kedi" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Kedi</h4>
                    <p>Kediler oyuncu ve meraklıdır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSoundAndProgress('/sounds/animals/kedi.mp3', 'Kedi')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                    <div class="progress my-3" style="height: 20px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" id="progress-kedi" role="progressbar" style="width: 0%">0%</div>
                    </div>
                </div>
            </div>
            <!-- Köpek -->
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="300">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #8C6CFF 0%, #1E90FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/dog.jpg" alt="Köpek" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Köpek</h4>
                    <p>Köpekler sadık ve sevimli hayvanlardır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSoundAndProgress('/sounds/animals/kopek.mp3', 'Köpek')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                    <div class="progress my-3" style="height: 20px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" id="progress-kopek" role="progressbar" style="width: 0%">0%</div>
                    </div>
                </div>
            </div>
            <!-- İnek -->
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="400">
                <div class="card h-100 shadow-lg border-0 text-center p-4 animal-card" style="background: linear-gradient(135deg, #4CAF50 0%, #17A2B8 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/cow.jpg" alt="İnek" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>İnek</h4>
                    <p>İnekler sakin ve süt veren hayvanlardır.</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSoundAndProgress('/sounds/animals/inek.mp3', 'İnek')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                    <div class="progress my-3" style="height: 20px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" id="progress-inek" role="progressbar" style="width: 0%">0%</div>
                    </div>
                </div>
