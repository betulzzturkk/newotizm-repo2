@model List<AutismEducationPlatform.Web.Models.ViewModels.ColorViewModel>

@{
    ViewData["Title"] = "Renkler";
}

<link rel="stylesheet" href="/css/colors-bg.css" />

<div class="body-colors-bg" style="background-image: url('/images/animals/animal-bg-pattern.png'), linear-gradient(135deg, #FFB347 0%, #6B48FF 50%, #FF6B6B 100%); background-size: 300px, cover; background-repeat: repeat;">
    <div class="cloud"></div>
    <div class="cloud cloud2"></div>
    <div class="cloud cloud3"></div>
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-10">
                <div class="alert alert-info text-center mb-4" style="font-size:1.2rem;">
                    <i class="fas fa-info-circle me-2"></i>
    
                İlerlemenizin kaydedilmesi için <a href="/Account/Login" class="alert-link">giriş yapın</a> veya <a href="/Account/Register" class="alert-link">kaydolun</a>.
            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <h2 class="mb-3" style="font-size:2.5rem; font-weight:800; color:#6B48FF;">
                <i class="fas fa-palette me-2"></i> Renkler
            </h2>
            <p class="lead">
                Renkleri tanı, seslerini dinle ve ilerlemeni takip et!
            </p>
        </div>
    </div>
    <div class="row g-4">
        @foreach (var color in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-lg border-0 text-center p-4 color-card" style="background: linear-gradient(135deg, #FFB347 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="@color.ImagePath" alt="@color.Name" class="img-fluid rounded mb-3" style="height:240px; object-fit:contain;">
                    <h4>@color.Name</h4>
                    <p>@color.Description</p>
                    <button class="btn btn-outline-light mb-3" onclick="playSoundAndProgress('@color.SoundPath', '@color.Name')"><i class="fas fa-volume-up me-2"></i>Sesi Dinle</button>
                    <div class="progress my-3" style="height: 20px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" id="progress-@color.Name.ToLower()" role="progressbar" style="width: 0%">0%</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function playSoundAndProgress(soundPath, colorName) {
        var audio = new Audio(soundPath);
        audio.play();
        var progressBar = document.getElementById('progress-' + colorName.toLowerCase());
        var currentProgress = parseInt(progressBar.style.width) || 0;
        // 3 tıklamada %100: her tıklamada +34
        var newProgress = currentProgress + 34;
        if (newProgress > 100) newProgress = 100;
        progressBar.style.width = newProgress + '%';
        progressBar.textContent = newProgress + '%';
        progressBar.setAttribute('aria-valuenow', newProgress);
        // AJAX ile ilerleme bilgisini kaydet
        fetch('/Course/SaveColorProgress', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ colorName: colorName, progress: newProgress })
        })
        .then(response => response.json())
        .then(data => console.log('Success:', data))
        .catch((error) => console.error('Error:', error));
    }
</script>

<style>
.card.h-100 {
    min-height: 420px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.img-fluid.rounded.mb-3 {
    height: 240px !important;
    object-fit: contain !important;
}
</style> 