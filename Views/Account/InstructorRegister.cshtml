@model AutismEducationPlatform.Web.Models.InstructorRegistrationViewModel

@{
    ViewData["Title"] = "Eğitmen Kaydı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="background-color: white; border-radius: 15px;">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
                        <h2 class="text-primary fw-bold">Eğitmen Kaydı</h2>
                    </div>
                    <form asp-action="InstructorRegister" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">
                                <i class="fas fa-user text-primary me-2"></i>Ad Soyad
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="control-label">
                                <i class="fas fa-lock text-primary me-2"></i>Şifre Tekrar
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Specialization" class="control-label">
                                <i class="fas fa-graduation-cap text-primary me-2"></i>Uzmanlık Alanı
                            </label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Experience" class="control-label">
                                <i class="fas fa-briefcase text-primary me-2"></i>Deneyim (Yıl)
                            </label>
                            <input asp-for="Experience" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5" style="font-weight: 600;">
                                <i class="fas fa-user-plus me-2"></i>KAYIT OL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 