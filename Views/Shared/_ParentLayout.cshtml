@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veli Paneli</title>
    
    <!-- CSS Dosyaları -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/parent-panel.css" />
    
    @RenderSection("Head", false)
</head>
<body>
    <!-- Sidebar -->
    <div class="parent-sidebar">
        <div class="sidebar-profile" style="text-align:center; margin-bottom:10px;">
            <img src="/images/profiles/profil.jpg" alt="Profil Resmi" style="width:90px; height:90px; border-radius:50%; object-fit:cover; box-shadow:0 2px 8px rgba(0,0,0,0.12); border:3px solid #fff; background:#eee; margin-bottom:8px;" />
        </div>
        <div class="sidebar-header">
            <i class="fas fa-child"></i>
            <span>Veli Paneli</span>
        </div>
        <nav>
            <ul>
                <li>
                    <a href="/Parent" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-home"></i>
                        <span>Ana Sayfa</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/ChildInfo">
                        <i class="fas fa-baby"></i>
                        <span>Çocuk Bilgileri</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/Educations">
                        <i class="fas fa-graduation-cap"></i>
                        <span>Eğitimler</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/Progress">
                        <i class="fas fa-chart-line"></i>
                        <span>Gelişim Raporu</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/Messages">
                        <i class="fas fa-envelope"></i>
                        <span>Mesajlar</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/Calendar">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Takvim</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/Guidance">
                        <i class="fas fa-book"></i>
                        <span>Rehberlik</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/HomeTips">
                        <i class="fas fa-lightbulb"></i>
                        <span>Evde Öneriler</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/Settings">
                        <i class="fas fa-cog"></i>
                        <span>Ayarlar</span>
                    </a>
                </li>
                <li class="mt-auto">
                    <a href="/Parent/Profile" class="profile-edit-link">
                        <i class="fas fa-user-edit"></i>
                        <span>Profili Düzenle</span>
                    </a>
                </li>
                <li>
                    <a href="/Parent/AddChild" class="add-child-link">
                        <i class="fas fa-user-plus"></i>
                        <span>Çocuk Ekle</span>
                    </a>
                </li>
                <li>
                    <a href="/Account/Logout?returnUrl=/Home/Index" class="logout-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Çıkış Yap</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Ana İçerik -->
    <div class="parent-content">
        @RenderBody()
    </div>

    <!-- Çıkış Onay Modalı -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Çıkış Yap</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <p>Çıkış yapmak istediğinizden emin misiniz?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <a href="/Account/Logout?returnUrl=/Home/Index" class="btn btn-danger">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Dosyaları -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const logoutLink = document.querySelector('.logout-link');
            const logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
            
            logoutLink.addEventListener('click', function(e) {
                e.preventDefault();
                logoutModal.show();
            });
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html> 