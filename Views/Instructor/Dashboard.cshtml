@model AutismEducationPlatform.Web.Models.ViewModels.InstructorDashboardViewModel

@{
    ViewData["Title"] = "Eğitmen Paneli";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

@Html.AntiForgeryToken()

<div class="container-fluid">
    <div class="row">
        <!-- Ana İçerik -->
        <div class="container mt-4">
            <!-- Hoşgeldiniz Kartı -->
            <div class="hero-section mb-5">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="display-4 fw-bold mb-3">Hoş Geldiniz, @Model.InstructorInfo.Name!</h1>
                            <p class="lead mb-4">Öğrencilerinizin eğitim yolculuğunda size yardımcı olmaktan mutluluk duyuyoruz.</p>
                            <div class="hero-btns">
                                <a href="@Url.Action("Education", "Instructor")" class="btn btn-primary">
                                    <i class="fas fa-graduation-cap me-2"></i>Eğitimlere Başla
                                </a>
                                <a href="@Url.Action("Progress", "Instructor")" class="btn btn-outline-light">
                                    <i class="fas fa-chart-line me-2"></i>İlerlemeyi Gör
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="profile-icon-container mb-4">
                                <i class="fas fa-chalkboard-teacher fa-5x text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hero-shapes">
                    <div class="shape"></div>
                    <div class="shape"></div>
                    <div class="shape"></div>
                </div>
            </div>

            <!-- Ana Menü Kartları -->
            <div class="row g-4">
                <!-- Aktif Eğitimler -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-primary text-white mb-3">
                                <i class="fas fa-graduation-cap fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Aktif Eğitimler</h3>
                            <p class="text-muted mb-4">Öğrencilerinizin devam eden eğitimlerini görüntüleyin ve takip edin.</p>
                            <a href="@Url.Action("Index", "Course")" class="btn btn-primary w-100">
                                <i class="fas fa-play me-2"></i>Eğitime Başla
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Rehberlik -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-success text-white mb-3">
                                <i class="fas fa-book fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Önerilen Etkinlikler ve Tavsiyeler</h3>
                            <p class="text-muted mb-4">Uzmanlarımızdan öneriler ve rehberlik hizmetleri.</p>
                            <a href="@Url.Action("Guidance", "Instructor")" class="btn btn-success w-100">
                                <i class="fas fa-arrow-right me-2"></i>Rehberliğe Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Haberler -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-info text-white mb-3">
                                <i class="fas fa-newspaper fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Haberler</h3>
                            <p class="text-muted mb-4">Güncel gelişmeler ve önemli duyurular.</p>
                            <a href="@Url.Action("News", "Instructor")" class="btn btn-info w-100">
                                <i class="fas fa-arrow-right me-2"></i>Haberleri Gör
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Kaynaklar -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-warning text-white mb-3">
                                <i class="fas fa-lightbulb fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Dosya ve Materyal Paylaşımı</h3>
                            <p class="text-muted mb-4">Faydalı materyaller ve eğitim kaynakları.</p>
                            <a href="@Url.Action("Resources", "Instructor")" class="btn btn-warning w-100">
                                <i class="fas fa-arrow-right me-2"></i>Kaynaklara Git
                            </a>
                        </div>
                    </div>
                </div>

                <!-- İlerleme Raporu -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-danger text-white mb-3">
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">Eğitim İlerleme Raporu</h3>
                            <p class="text-muted mb-4">Öğrencilerinizin gelişimini takip edin.</p>
                            <a href="@Url.Action("Progress", "Instructor")" class="btn btn-danger w-100">
                                <i class="fas fa-arrow-right me-2"></i>Raporu Gör
                            </a>
                        </div>
                    </div>
                </div>

                <!-- İletişim -->
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-secondary text-white mb-3">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <h3 class="h5 fw-bold mb-3">İletişim</h3>
                            <p class="text-muted mb-4">Bizimle iletişime geçin.</p>
                            <a href="@Url.Action("Contact", "Instructor")" class="btn btn-secondary w-100">
                                <i class="fas fa-arrow-right me-2"></i>İletişime Geç
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('a[href="@Url.Action("Logout", "Account")"]').addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = '@Url.Action("Logout", "Account")';
        });
    </script>
} 