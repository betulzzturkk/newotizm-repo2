@model IEnumerable<AutismEducationPlatform.Web.Models.Course>

@{
    ViewData["Title"] = "Eğitimler";
}

<link rel="stylesheet" href="/css/animals-bg.css" />

<div class="body-animals-bg" style="background-image: url('/images/animals/animal-bg-pattern.png'), linear-gradient(135deg, #FFB347 0%, #6B48FF 50%, #FF6B6B 100%); background-size: 300px, cover; background-repeat: repeat;">
    <div class="cloud"></div>
    <div class="cloud cloud2"></div>
    <div class="cloud cloud3"></div>
    <div class="container py-5">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="mb-3" style="font-size:2.5rem; font-weight:800; color:#6B48FF;" data-aos="fade-up">
                    <i class="fas fa-graduation-cap me-2"></i> Eğitimler
                </h2>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">
                    Eğlenceli ve öğretici içeriklerle öğrenmeye başlayalım!
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #FF6B6B 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/animals/animal-bg-pattern.png" alt="Hayvanlar" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Hayvanlar</h4>
                    <p>Hayvanları tanıyalım ve seslerini öğrenelim!</p>
                    <a href="/Course/Animals" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="300">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #4CAF50 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/colors/color-bg-pattern.png" alt="Renkler" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Renkler</h4>
                    <p>Renkleri öğrenelim ve eşleştirelim!</p>
                    <a href="/Course/Colors" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="400">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #2196F3 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/shapes/shape-bg-pattern.png" alt="Şekiller" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Şekiller</h4>
                    <p>Şekilleri tanıyalım ve çizelim!</p>
                    <a href="/Course/Shapes" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="500">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #FFC107 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/numbers/number-bg-pattern.png" alt="Sayılar" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Sayılar</h4>
                    <p>Sayıları öğrenelim ve sayalım!</p>
                    <a href="/Course/Numbers" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="600">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #9C27B0 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/tales/tale-bg-pattern.png" alt="Masallar" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Masallar</h4>
                    <p>Masalları dinleyelim ve öğrenelim!</p>
                    <a href="/Course/Tales" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="700">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #FF5722 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/traffic/traffic-bg-pattern.png" alt="Trafik İşaretleri" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Trafik İşaretleri</h4>
                    <p>Trafik işaretlerini öğrenelim!</p>
                    <a href="/Course/TrafficSigns" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="800">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #E91E63 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/manners/manner-bg-pattern.png" alt="Görgü Kuralları" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Görgü Kuralları</h4>
                    <p>Görgü kurallarını öğrenelim!</p>
                    <a href="/Course/Manners" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4" data-aos="zoom-in" data-aos-delay="900">
                <div class="card h-100 shadow-lg border-0 text-center p-4" style="background: linear-gradient(135deg, #00BCD4 0%, #6B48FF 100%); color: #fff; border-radius: 25px;">
                    <img src="/images/manners/manner-bg-pattern.png" alt="Kendini İfade Etme" class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;">
                    <h4>Kendini İfade Etme</h4>
                    <p>Duygularımızı ve düşüncelerimizi ifade etmeyi öğrenelim!</p>
                    <a href="/Course/SelfExpression" class="btn btn-outline-light">Başla</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
        border: none;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    .card-text {
        font-size: 0.9rem;
        color: #6c757d;
    }
    .badge {
        font-size: 0.8rem;
        padding: 0.5em 0.8em;
    }
</style> 